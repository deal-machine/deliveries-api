{
    "name": "the-word-api",
    "version": "1.0.0",
    "description": "The Word is a system to church management.",
    "main": "index.js",
    "keywords": [
        "api",
        "church",
        "management"
    ],
    "author": "deal-machine",
    "license": "ISC",
    "scripts": {
        "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/main/http/server.ts",
        "test": "cross-env NODE_ENV=test jest --detectOpenHandles --coverage --testTimeout=10000 --force-exit",
        "test:staged": "cross-env NODE_ENV=test jest --detectOpenHandles --testTimeout=10000 --force-exit",
        "migrate": "npx typeorm-ts-node-commonjs migration:run -d ./src/infra/database/typeorm/data-source.ts",
        "revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/infra/database/typeorm/data-source.ts"
    },
    "dependencies": {
        "bcrypt": "^5.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "pg": "^8.8.0",
        "reflect-metadata": "^0.1.13",
        "swagger-ui-express": "^4.6.0",
        "typeorm": "^0.3.10",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.14",
        "@types/jest": "^29.2.2",
        "@types/node": "^18.11.9",
        "@types/supertest": "^2.0.12",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.42.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.27.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-import-helpers": "^1.3.1",
        "eslint-plugin-prettier": "^4.2.1",
        "git-commit-msg-linter": "^4.2.1",
        "husky": "^8.0.2",
        "jest": "^29.3.1",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "supertest": "^6.3.1",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^4.8.4"
    }
